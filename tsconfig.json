{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es2017"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ],
      "tests": [
        "tests/*"
      ],
      "@Routes/*": [
        "src/routes/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@Illus/*": [
        "./assets/illustration/*"
      ],
      "@Icons/*": [
        "./assets/icons/*"
      ],
      "@Styles/*": [
        "src/styles/*"
      ],
      "@Types/*": [
        "src/types/*"
      ],
    },
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "types": [
    "jest",
    "styled-components-react-native"
  ],
  "include": [
    "./**/*",
    "./*",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}